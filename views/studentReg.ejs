<!DOCTYPE html>
<html >
<head>
  <meta charset="UTF-8">
  <title>Sign Up</title>
        <link rel="stylesheet" href="css/style.css">
</head>

<body>
  <body>
<div class="container">
  <section id="content">
    <form action="/studentReg" method="post">
      <h1>Student Sign Up</h1>
      <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>
      <div>
        <input type="text" placeholder="Username" required="" id="username" name = "username" />
      </div>
      <div>
        <input type="password" placeholder="Password" required="" id="password" name = "password" />
      </div>
       <div>
        <input type="text" placeholder="GUC ID" required="" id="gucID" name = "gucID" />
      </div>
      <!-- he should add his first work -->
      <div>
        <input type="submit" value="Sign Up" />
        <a href="/toBeAdded">Lost your password?</a>
        <a href="/studentLog">Already have an account? </a>
      </div>
    </form><!-- form -->
    <div class="button">
      <a href="/">Go back  </a>
    </div><!-- button -->
  </section><!-- content -->
</div><!-- container -->
</body>
  
    <script src="js/index.js"></script>

</body>
</html>